<template>
  <div class="memo-container">
    <h2>ãƒ¡ãƒ¢å¸³</h2>

    <!-- ğŸ”µ å…¥åŠ›ã‚¨ãƒªã‚¢ -->
    <textarea v-model="text" placeholder="ãƒ¡ãƒ¢ã‚’æ›¸ã..." />

    <!-- ğŸ”µ ä¿å­˜ãƒœã‚¿ãƒ³ -->
    <button
      @click="saveMemo"
      :disabled="text.trim().length === 0"
      :class="text.trim().length === 0 ? 'btn-disabled' : 'btn-active'"
    >
      ä¿å­˜
    </button>

    <!-- ğŸ”µ ãƒ¡ãƒ¢ä¸€è¦§ -->
    <ul class="memo-list">
      <li v-for="memo in memos" :key="memo.id" @click="openMemoOptions(memo)">
        <div class="memo-item">
          <span class="flower-icon">{{ getLifeStageIcon(memo) }}</span>
          <div class="memo-content">{{ memo.content }}</div>
        </div>
        <small>
          ä½œæˆ: {{ formatDate(memo.createdAt) }}
          <template v-if="memo.updatedAt && memo.updatedAt !== memo.createdAt">
            <br />æ›´æ–°: {{ formatDate(memo.updatedAt) }}
          </template>
        </small>
      </li>
    </ul>

    <!-- ğŸ”µ ç·¨é›†ãƒ»å‰Šé™¤ãƒ¢ãƒ¼ãƒ€ãƒ« -->
    <transition name="memo-modal">
      <div v-if="isModalOpen" class="modal" @click.self="closeModal">
        <div class="modal-content">
          <h3>ãƒ¡ãƒ¢ç·¨é›†</h3>

          <textarea v-model="editText" placeholder="ãƒ¡ãƒ¢ã‚’ç·¨é›†..." />

          <div class="button-row">
            <button
              @click="updateSelectedMemo"
              :disabled="editText.trim().length === 0"
              :class="editText.trim().length === 0 ? 'btn-disabled' : 'btn-active'"
            >
              ä¿å­˜
            </button>

            <button class="btn-danger" @click="deleteSelectedMemo">
              å‰Šé™¤
