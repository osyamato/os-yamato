      </div>
<ChatEffect ref="chatEffect" />


      <!-- ğŸ”½ å…¥åŠ›æ¬„ -->
      <div class="input-area">
        <textarea
          v-model="newMessage"
          placeholder="ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å…¥åŠ›..."
          rows="1"
          class="message-input"
          @input="autoResize"
        />
        <button @click="sendMessage">é€ä¿¡</button>
      </div>
