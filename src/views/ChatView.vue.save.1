      <!-- ğŸ”¼ ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ä¸€è¦§ -->
      <div class="message-list">
        <template v-for="(msg, index) in groupedMessages" :key="msg.id || index">
          <div v-if="msg.isDateSeparator" class="date-separator">
            {{ msg.date }}
          </div>

          <!-- ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸æœ¬ä½“ -->
          <div
            v-else
            class="message-row"
            :class="{ mine: msg.senderYamatoId === myYamatoId }"
          >
            <!-- ç›¸æ‰‹ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ -->
